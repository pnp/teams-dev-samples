{
  "type": "AdaptiveCard",
  "refresh": {
    "action": {
      "type": "Action.Execute",
      "title": "Submit",
      "verb": "editOrResolveIncident",
      "data": {
        "CreatedBy": "${createdBy}",
        "CreatedByUserID": "${createdByUserID}",
        "ServiceName": "${serviceName}",
        "ImagePath": "${imagePath}",
        "AssignedToUserID": "${assignedToUserID}",
        "IncidentTitle": "${incidentTitle}",
        "IncidentDescription": "${incidentDescription}",
        "IncidentCategory": "${incidentCategory}"
      }
    },
    "userIds": [ "${createdByUserID}", "${assignedToUserID}" ]
  },
  "body": [
    {
      "type": "Image",
      "url": "${imagePath}",
      "altText": "${imageAlt}",
      "size": "auto"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${profileImage}",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${createdBy}",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "Created ${createdUtc}",
              "isSubtle": true,
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "separator": true,
      "bleed": true,
      "spacing": "Padding",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "size": "Small",
              "text": "Incident Title",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "separator": true,
              "wrap": true,
              "text": "${incidentTitle}",
              "size": "Small"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "separator": true,
      "bleed": true,
      "spacing": "Padding",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "size": "Small",
              "text": "Incident Description",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "separator": true,
              "wrap": true,
              "text": "${incidentDescription}",
              "size": "Small"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "separator": true,
      "bleed": true,
      "spacing": "Padding",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "size": "Small",
              "text": "Incident Category",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "separator": true,
              "wrap": true,
              "text": "${incidentCategory}",
              "size": "Small"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}