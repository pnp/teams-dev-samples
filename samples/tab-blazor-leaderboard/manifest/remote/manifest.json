{
   "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.9/MicrosoftTeams.schema.json",
   "version": "1.0.0",
   "manifestVersion": "1.9",
   "id": "{{{client-id}}}",
   "packageName": "com.company.example",
   "name": {
      "short": "TeamsLeaderboard",
      "full": "TeamsLeaderboard"
   },
   "developer": {
      "name": "Solvion",
      "mpnId": "",
      "websiteUrl": "{{{endpoint}}}",
      "privacyUrl": "{{{endpoint}}}/privacy",
      "termsOfUseUrl": "{{{endpoint}}}/termsofuse"
   },
   "description": {
      "short": "Short description for TeamsLeaderboard.",
      "full": "Full description of TeamsLeaderboard."
   },
   "icons": {
      "outline": "outline.png",
      "color": "color.png"
   },
   "accentColor": "#FFFFFF",
   "configurableTabs": [
      {
         "configurationUrl": "{{{endpoint}}}/config",
         "canUpdateConfiguration": true,
         "scopes": [
            "team",
            "groupchat"
         ]
      }
   ],
   "staticTabs": [
      {
         "entityId": "index",
         "name": "Personal Tab",
         "contentUrl": "{{{endpoint}}}/tab",
         "websiteUrl": "{{{endpoint}}}/tab",
         "scopes": [
            "personal"
         ]
      }
   ],
   "validDomains": [
      "{{{domain}}}"
   ],
   "permissions": [
      "identity",
      "messageTeamMembers"
   ],
   "webApplicationInfo": {
      "id": "{{{client-id}}}",
      "resource": "{{{application-id-uri}}}"
   }
}